<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="be.krivi.plutus.android.activity.LoginActivity"
                style="@style/Plutus.Layout">

    <ImageView
            android:layout_width="240dp"
            android:layout_height="260dp"
            android:id="@+id/img_logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ucll_logo"
            android:scaleType="fitEnd"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_logo"
            android:id="@+id/layout_login_form">

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/student_id"
                android:id="@+id/txt_studentId"
                android:layout_marginBottom="@dimen/plutus_spacer_default"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/password"
                android:id="@+id/txt_password"
                android:layout_marginBottom="@dimen/plutus_spacer_default"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
        <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/remember_me"
                android:id="@+id/checkbox_rememberMe"
                android:buttonTint="@color/ucll_light"
                android:textColor="@color/ucll_light_blue"/>
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:id="@+id/btn_logIn"
            android:layout_below="@+id/layout_login_form"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/ucll_dark_blue"
            android:textColor="@color/ucll_light"
            android:paddingLeft="@dimen/activity_login_padding"
            android:paddingRight="@dimen/activity_login_padding"
            android:layout_marginTop="@dimen/activity_login_padding"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_aboutPlutus"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:src="@drawable/ic_info_white_18dp"
            android:background="@android:color/transparent"/>

</RelativeLayout>
