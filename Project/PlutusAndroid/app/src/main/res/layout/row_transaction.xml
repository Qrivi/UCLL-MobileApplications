<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

    <!-- TODO replace dummy text by more general placeholders -->
    <!-- TODO extract values to dimen.xml -->

    <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/tr_wrapperDate">

        <!-- TODO shape voor achtergrond tekenen -->

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tr_month"
                    android:gravity="center"
                    android:text="nov"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tr_day"
                    android:gravity="center"
                    android:text="28"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tr_wrapperDate"
            android:id="@+id/linearLayout"
            android:paddingRight="100dp">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tr_title"
                android:gravity="left"
                android:text="Drankenautomaat TEST"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tr_location"
                android:gravity="left"
                android:text="UCLL Campus Proximus"/>
    </LinearLayout>

    <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tr_amount"
            android:gravity="right"
            android:text="$ 5,12"/>

</RelativeLayout>
