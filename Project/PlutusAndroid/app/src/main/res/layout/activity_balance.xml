<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="be.krivi.plutus.android.activity.BalanceActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                layout="@layout/app_toolbar"
                android:id="@+id/toolbar"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_margin_default">

            <!-- fragments here -->

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/buttonVOORUIT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="Klik to move"/>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/app_drawer"
            app:menu="@menu/app_drawer"
            app:itemBackground="@drawable/ripple_drawer"
            app:itemIconTint="@color/drawer_item_text_color"
            app:itemTextColor="@color/drawer_item_text_color">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
