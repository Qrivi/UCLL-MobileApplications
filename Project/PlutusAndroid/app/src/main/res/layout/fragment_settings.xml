<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wrapperSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credit"
            style="@style/Plutus.RowHeader"/>

    <LinearLayout
            android:id="@+id/pref_wrapperCredit_gaugeSwitch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="@dimen/padding_header"
            android:paddingBottom="@dimen/padding_header">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_credit_gauge"
                    style="@style/Plutus.RowTitle"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visualy_display_your_current_credit"
                    style="@style/Plutus.RowSubTitle"/>
        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
                android:id="@+id/pref_switchCreditGauge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:showText="false"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="@dimen/padding_header"
            android:paddingBottom="@dimen/padding_header">

        <LinearLayout
                android:id="@+id/pef_wrapperCredit_gaugeMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="?android:attr/selectableItemBackground">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minimum"
                    style="@style/Plutus.RowTitle"/>

            <TextView
                    android:id="@+id/pref_hintCreditGaugeMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Plutus.RowSubTitle"
                    android:text="@string/not_applicable_short"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/pef_wrapperCredit_gaugeMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="?android:attr/selectableItemBackground">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maximum"
                    style="@style/Plutus.RowTitle"/>

            <TextView
                    android:id="@+id/pref_hintCreditGaugeMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Plutus.RowSubTitle"
                    android:text="@string/not_applicable_short"/>
        </LinearLayout>

    </LinearLayout>

    <View
            style="@style/Plutus.Separator"
            android:layout_marginTop="@dimen/app_list_item"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            style="@style/Plutus.RowHeader"
            android:paddingTop="@dimen/padding_header"/>

    <LinearLayout
            android:id="@+id/pref_wrapperNotifications_notificationSwitch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="@dimen/padding_header"
            android:paddingBottom="@dimen/padding_header">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_notifications"
                    style="@style/Plutus.RowTitle"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifcations"
                    style="@style/Plutus.RowSubTitle"/>
        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
                android:id="@+id/pref_switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:showText="false"/>

    </LinearLayout>

    <View
            style="@style/Plutus.Separator"
            android:layout_marginTop="@dimen/app_list_item"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/application"
            style="@style/Plutus.RowHeader"
            android:paddingTop="@dimen/padding_header"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_header"
            android:paddingBottom="@dimen/padding_header">

        <LinearLayout
                android:id="@+id/pref_wrapperNotifications_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_header"
                android:paddingBottom="@dimen/padding_header"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="?android:attr/selectableItemBackground">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/set_language"
                    style="@style/Plutus.RowTitle"/>

            <TextView
                    android:id="@+id/pref_hintLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/not_applicable_full"
                    style="@style/Plutus.RowSubTitle"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/pref_wrapperHomeScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_header"
                android:paddingBottom="@dimen/padding_header"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="?android:attr/selectableItemBackground">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set homescreen"
                    style="@style/Plutus.RowTitle"/>

            <TextView
                    android:id="@+id/pref_hintHomescreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/not_applicable_full"
                    style="@style/Plutus.RowSubTitle"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
            android:id="@+id/pref_wrapper_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_header"
            android:paddingBottom="@dimen/padding_header">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/if_the_application_is_malfunctioning"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/Plutus.RowTitle"/>
        <Button
                android:id="@+id/pref_btnResetApplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/reset"/>
    </LinearLayout>


</LinearLayout>