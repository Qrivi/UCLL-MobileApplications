<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Balance">

        <SwitchPreferenceCompat
                android:key="credit_rep"
                android:title="Visual representation"
                android:summary="Show visual balance representation"
                android:defaultValue="true"/>

        <EditTextPreference
                android:key="credit_rep_min"
                android:title="Minimum"
                android:dialogTitle="Minimum"
                android:dependency="credit_rep"/>

        <EditTextPreference
                android:key="credit_rep_max"
                android:title="Maximum"
                android:dialogTitle="Maximum"
                android:dependency="credit_rep"/>
    </PreferenceCategory>

    <PreferenceCategory
            android:title="Notifications">
        <SwitchPreferenceCompat
                android:key="notifications"
                android:title="Enable notifications"
                android:summary="Recurring and conditional notifications"
                android:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
            android:title="Application">
        <ListPreference
                android:key="language"
                android:title="Language"
                android:dialogTitle="Language"
                android:entries="@array/languages"
                android:entryValues="@array/languages"/>
    </PreferenceCategory>

    <PreferenceCategory
            android:title="Reset">
        <ListPreference
                android:key="reset"
                android:title="Reset"
                android:summary="Resetting the app will remove all locally stored data"
                android:entries="@array/reset"
                android:entryValues="@array/reset"
                android:dialogTitle="Are u sure?"/>
    </PreferenceCategory>
</PreferenceScreen>